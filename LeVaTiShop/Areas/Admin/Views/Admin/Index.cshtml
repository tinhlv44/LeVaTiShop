@model IEnumerable<LeVaTiShop.Models.User>
@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content_title">
    <b class="content_title_ct">Danh sách tài khoản</b>
    <div class="content_title_time"><span id="date"></span></div>
</div>
<div class="content_main">
    <div class="content_titleList">
        <div>
            @*<a href="#" class="btn btn_add">
                    <i class="fas fa-plus"></i>
                    Thêm mới
                </a>*@
        </div>
        <div>
            <form action="@Url.Action("Index", "Admin")" method="post" class="searchBar_admin">
                <label for="searchInput">Tìm kiếm:</label>
                <input type="search" id="searchInput" name="key" class="form-control form-control-sm" placeholder="" aria-controls="sampleTable">
                <button type="submit" class="btn btn_search">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>
        </div>
    </div>
    <div class="content_list">
        @if (Model == null || !Model.Any())
        {
            <div>
                <div class="pcart_hollow">
                    <i class="icon_sad fa-solid fa-face-frown"></i>
                    <div class="pcart_hollowct">Không tìm thấy kết quả</div>
                </div>
            </div>
        }
        else
        {
            <table class="table_list">
                <thead>
                    <tr>
                        <th>
                            Mã tài khoản
                        </th>
                        <th>
                            Họ và tên
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Địa chỉ
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Quyền
                        </th>
                        <th class="th_btn">

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        if (i.idUser != 0)
                        {

                            <tr>
                                <td>
                                    @i.idUser
                                </td>
                                <td>
                                    @i.fullName
                                </td>
                                <td>
                                    @i.email
                                </td>
                                <td>
                                    @i.address
                                </td>
                                <td>
                                    @i.phone
                                </td>
                                <td>
                                    @if (i.role == true && i.idUser == 1)
                                    {
                                        <p>Admin</p>
                                    }
                                    else if (i.role == true)
                                    {
                                        <p>Quản lí</p>
                                    }
                                    else
                                    {
                                        <p>Khách hàng</p>
                                    }
                                </td>

                                <td class="td_btn">
                                    <a href="@Url.Action("UserDetail","Admin", new {id=i.idUser})" class="btn btn_min btn_detail" type="button" title="Thông tin chi tiết">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>
                                    <button class="btn btn_min btn_trash" name="delete" id="@i.idUser" title="Xóa" onclick="show('modal_admin')">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }

    </div>
</div>

@section scripts{
    <script>
        // Cập nhật giờ hiện tại mỗi giây
        setInterval(displayCurrentTime, 1000);

        var idToDelete;
        $(document).on('click', "button[name='delete']", function () {
            idToDelete = $(this).attr('id');
            $('#modalbox_heading').text('Cảnh báo');
            $('#modalbox_ct').text('Bạn có chắc chắn muốn xóa tài khoản này?');
            $('#btnDelete').show();
            $('#btnCancel').show();
            $('#modal_admin').show();
            hide_Model("modal_admin");
        })

        $('#btnDelete').click(function () {
            $.ajax({
                url: '/Admin/Admin/DeleteUser',
                type: 'post',
                data: {
                    id: idToDelete
                },
                success: function (data) {
                    if (data.code) {
                        toastr.success(data.msg + '<br>Tải lại trang sau 2 giây.');
                        setTimeout(function () {
                            location.reload();
                        }, 2000);
                    } else {
                        toastr.error(data.msg);
                    }
                    $('#modal_admin').hide();
                }
            });
        })
    </script>
}
