<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <script src="~/set/js/main.js"></script>
    <link rel="stylesheet" href="~/set/css/base.css">
    <link rel="stylesheet" href="~/set/css/main.css">
    <link rel="stylesheet" href="~/set/icon-web/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;1,100;1,300;1,400;1,500&display=swap" rel="stylesheet">
    <link rel="icon" href="@Url.Content("~/set/img/logo_icon.jpg")" type="image/png">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @*toastr*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</head>
<body>
    <div class="bg_modal" id="modal_admin">
        <div class="modal_box modal_box_notify set_center">
            <span class='modalbox_close'>&times;</span>

            <div class="modal_body">
                <h3 class='modalbox_heading' id='modalbox_heading'></h3>
                <p class='modalbox_ct' id='modalbox_ct'></p>
            </div>
            <div class="modal_footer">
                <button class="btn btn_nor btn_save" type="button" id="btnDelete">Đồng ý</button>
                <button class="btn btn_nor btn_exit" data-dismiss="bg_modal" onclick="show('modal_admin')" id="btnCancel">@*Hủy bỏ*@Quay lại</button>
                @*<button class="btn btn_nor btn_exit" type="button" id="btnExit" onclick="show('modal_admin')">Quay lại</button>*@
            </div>
        </div>
    </div>
    <script>
        toastr.options = {
            closeButton: false,
            debug: false,
            newestOnTop: false,
            progressBar: true,
            positionClass: 'toast-top-center',
            preventDuplicates: false,
            onclick: null,
            showDuration: '300',
            hideDuration: '1000',
            timeOut: '10000',
            extendedTimeOut: '1000',
            showEasing: 'swing',
            hideEasing: 'linear',
            showMethod: 'fadeIn',
            hideMethod: 'fadeOut'
        };
    </script>
    <div class="web">
        @Html.Action("Header", "Admin")
        <div class="main_admin">
            @Html.Action("Sidebar", "Admin")
            <div class="content_admin" id="main">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
    <script>

        const inputs = document.getElementsByClassName('numeric-input');

        Array.from(inputs).forEach(input => {
            input.addEventListener('input', function (event) {
                const value = event.target.value.replace(/\D/g, ''); // Lọc bỏ các ký tự không phải số
                event.target.value = formatNumber(value); // Định dạng số và gán lại vào trường input
            });
        });

        function formatNumber(number) {
            const formatter = new Intl.NumberFormat('vi-VN');
            return formatter.format(number);
        }
            //set toastr

    </script>
</body>
</html>
