@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Login.cshtml";
}


<div class="relo">
    <div class="relo_bg"></div>
    <div class="relo_body">
        <div class="relo_container">
            <div class="relo_head">
                <h3 class="relo_heading">Đăng ký</h3>
                <a href="login.html" class="relo_relo">Đăng nhập</a>
            </div>
            <div class="relo_form">
                <div class="relo_err">
                    <p class="relo_errct">
                        Số điện thoại của bạn không đúng định dạng!
                    </p>
                </div>
                <div class="relo_err">
                    <p class="relo_errct">
                        Bạn chưa nhập số điện thoại!
                    </p>
                </div>
                <div class="relo_gr">
                    <input type="text" id="relo_input_user" class="relo_input" placeholder="Số điện thoại đăng ký">
                </div>
                <div class="relo_err">
                    <p class="relo_errct">
                        Mật khẩu phải có ít nhất 8 kí tự
                    </p>
                </div>
                <div class="relo_err">
                    <p class="relo_errct">
                        Bạn chưa nhập mật khẩu!
                    </p>
                </div>
                <div class="relo_gr">
                    <input type="password" id="relo_input_pass" class="relo_input" placeholder="Mật khẩu">
                </div>
                <div class="relo_err">
                    <p class="relo_errct">
                        Mật khẩu không đúng!
                    </p>
                </div>
                <div class="relo_err">
                    <p class="relo_errct">
                        Vui lòng nhập lại mật khẩu!
                    </p>
                </div>
                <div class="relo_gr">
                    <input type="password" id="relo_input_repass" class="relo_input" placeholder="Nhập lại mật khẩu">
                </div>
                <div class="relo_hidden">
                    <input type="checkbox" class="relo_inputcheck" onclick="hiddenpass()">
                    <div class="relo_hiddenct">Hiện mật khẩu</div>
                </div>
            </div>
            <div class="relo_formaside">
                <p class="relo_dieukhoang">
                    Bằng việc đăng ký, bạn đã đồng ý với MOBILE Shop về
                    <a class="dieukhoang" href="#">Điều khoảng dịch vụ</a> &
                    <a class="dieukhoang" href="#">Chính sách bảo mật</a>
                </p>
            </div>
            <div class="relo_btn">
                <button class="relo_btnl btn" onclick="window.history.go(-1)">TRỞ LẠI</button>
                <button class="relo_btnr btn" onclick="checkregis()">ĐĂNG KÝ</button>
            </div>
        </div>
        <div class="relo_social">
            <a href="#" class="btn icon_fb btn_wicon" onclick="not_login()">
                <i class="btn_icon fab fa-facebook-square"></i>
                <span class="title_content">Kết nối với Facebook</span>
            </a>
            <a href="#" class="btn icon_gg btn_wicon" onclick="not_login()">
                <i class="btn_icon fab fa-google"></i>
                <span class="title_content">Kết nối với Google</span>
            </a>
        </div>
    </div>
</div>