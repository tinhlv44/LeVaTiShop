@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Login.cshtml";
}


<div class="relo">
    <div class="relo_bg"></div>
    <div class="relo_body">
        <form class="relo_container" action="/Login/Register" method="post">
            <div class="relo_head">
                <h3 class="relo_heading">Đăng ký</h3>
                <a href="@Url.Action("Login", "Login")" class="relo_relo">Đăng nhập</a>
            </div>

            <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>

            <div class="relo_form">


                <div class="input-container">
                    <input type="text" class="relo_input" name="nameUser" pattern="[a-zA-Z0-9]+" required="">
                    <label class="relo_label">Tên đăng nhập</label>
                </div>
                <div class="input-container input-container_min">
                    <input type="password" class="relo_input" name="pasword" pattern="[a-zA-Z0-9]+" required="" id="relo_input_pass">
                    <label class="relo_label">Mật khẩu</label>
                </div>
                <div class="input-container input-container_min">
                    <input type="password" class="relo_input" name="rePassword" pattern="[a-zA-Z0-9]+" required="" id="relo_input_repass">
                    <label class="relo_label">Nhập lại mật khẩu</label>
                </div>
                <div class="input-container input-container_min">
                    <input type="text" class="relo_input" name="fullName" required="">
                    <label class="relo_label">Họ và tên</label>
                </div>
                <div class="input-container input-container_min">
                    <input type="tel" class="relo_input" name="phone" required="">
                    <label class="relo_label">Số điện thoại</label>
                </div>
                <div class="input-container">
                    <input type="email" class="relo_input" name="email" required="">
                    <label class="relo_label">Email</label>
                </div>
                <div class="input-container">
                    <input type="text" class="relo_input" name="address" required="">
                    <label class="relo_label">Địa chỉ</label>
                </div>

                <div class="relo_hidden">
                    <input type="checkbox" class="relo_inputcheck" onclick="hiddenpass()">
                    <div class="relo_hiddenct">Hiện mật khẩu</div>
                </div>
            </div>
            <div class="relo_formaside">
                <p class="relo_dieukhoang">
                    Bằng việc đăng ký, bạn đã đồng ý với H&T Shop về
                    <a class="dieukhoang" href="#">Điều khoảng dịch vụ</a> &
                    <a class="dieukhoang" href="#">Chính sách bảo mật</a>
                </p>
            </div>
            <div class="relo_btn">
                <a href="@Url.Action("Index", "Home")" class="relo_btnl btn">
                    TRỞ LẠI
                </a>
                <button class="relo_btnr btn">ĐĂNG KÝ</button>
                <input type="hidden" value="@ViewBag.url" name="url" />
            </div>
        </form>
        <div class="relo_social">
            <a href="#" class="btn icon_fb btn_wicon" onclick="not_login()">
                <i class="btn_icon fab fa-facebook-square"></i>
                <span class="title_content">Kết nối với Facebook</span>
            </a>
            <a href="#" class="btn icon_gg btn_wicon" onclick="not_login()">
                <i class="btn_icon fab fa-google"></i>
                <span class="title_content">Kết nối với Google</span>
            </a>
        </div>
    </div>
</div>