@{
    List<string> slide = new List<string> { "Realme GT Neo2", "Samsung Galaxy Z Fold5 5G 256GB", "OPPO Reno10 Pro 5G", "Xiaomi Redmi Note 12 Pro", "iPhone 11", "iPhone 12" };
    LeVaTiShop.Models.function f = new LeVaTiShop.Models.function();
}

<div class="slideshow">
    @for (int i = 0; i < slide.Count; i++)
    {
        <div class="myslide">
            <a href="@Url.Action("DetailProduct","Home", new { id = f.getId(slide[i])})" class="slide_aimg">
                <img src="~/set/img/slideshow/@("sl"+(i+1)+".jpg")" class="slide_img">
            </a>
        </div>
    }
    <div class="slide_prev" onclick="plusSlides(-1)">❮</div>
    <div class="slide_next" onclick="plusSlides(1)">❯</div>

    <div class="slide_id">
        @for (int i = 0; i < slide.Count; i++)
        {
            <div class="slide_idd" onclick="currentSlide(@(i+1))"></div>
        }
    </div>
    <script>
        let slideIndex = 1;
        showSlides(slideIndex);

        setInterval(function () {
            if (slideIndex < 6) {
                slideIndex += 1;
            } else {
                slideIndex = 1;
            }
            showSlides(slideIndex);
        }, 5000);
        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function currentSlide(n) {
            showSlides(slideIndex = n);
        }

        function showSlides(n) {
            let slides = document.getElementsByClassName("myslide");
            let dots = document.getElementsByClassName("slide_idd");

            if (n > slides.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = slides.length }

            for (let i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }

            for (let i = 0; i < dots.length; i++) {
                dots[i].classList.remove("active");
            }

            slides[slideIndex - 1].style.display = "block";
            dots[slideIndex - 1].classList.add("active");
        }

        // Tự động thay đổi slide sau mỗi 5 giây
        /*setInterval(function () {
            plusSlides(1);
        }, 5000);*/

        // Hiệu ứng ảnh chạy từ phải qua trái
        let slideContainer = document.querySelector(".slideshow");
        slideContainer.addEventListener("click", function () {
            slideContainer.classList.toggle("slide_animation");
        });
    </script>
</div>