@model LeVaTiShop.Models.Product
@{
    ViewBag.Title = "DetailProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="cps">
        <ul class="cps_list">
            <li class="cps_item"><a href="index.html">Trang chủ</a></li>
            <li class="cps_ic">❯</li>
            <li class="cps_item">@Model.Category.name</li>
            <li class="cps_ic">❯</li>
            <li class="cps_item">@Model.nameProduct</li>
        </ul>
    </div>
    <div class="proinfor">
        <h2 class="proinfor_heading">@Model.nameProduct</h2>
        <div class="proinfor_box">
            <div class="proinfor_img">
                <img src="/set/img/product/iphone/iphone_13_pro_max/den.jpg" alt="" class="proinfor_cimg">
            </div>
            <div class="proinfor_describe">
                <div class="proi_coin">
                    <div class="coinpre">@Model.discountedPrice.ToString() + "đ";</div>
                    <div class="coinpast">@Model.price</div>
                </div>
                <div class="proi_ct">
                    <ul class="proi_list">
                        <li class="proi_item">
                            <h2 class="proi_name">Lựa chọn phiên bản mong muốn:</h2>
                        </li>
                        <li class="proi_item">
                            <p class="proi_name">Màu:</p>
                            <div class="proi_box">
                                <div class="proi_boxcolor cblack" onclick="seletion('color', 0, 'iphone/iphone_13_pro_max/den.jpg')"></div>
                            </div>
                            <div class="proi_box">
                                <div class="proi_boxcolor cwhile" onclick="seletion('color', 1, 'iphone/iphone_13_pro_max/trang.jpg')"></div>
                            </div>
                            <div class="proi_box">
                                <div class="proi_boxcolor cyellow" onclick="seletion('color', 2, 'iphone/iphone_13_pro_max/vang.jpg')"></div>
                            </div>
                            <div class="proi_box">
                                <div class="proi_boxcolor cblue" onclick="seletion('color', 3, 'iphone/iphone_13_pro_max/xanh.jpg')"></div>
                            </div>
                        </li>
                        <li class="proi_item">
                            <p class="proi_name">Bộ nhớ</p>
                            <div class="proi_box">
                                <div class="proi_boxctram" onclick="seletion('ctram', 0)">128G</div>
                            </div>
                            <div class="proi_box">
                                <div class="proi_boxctram" onclick="seletion('ctram', 1)">256G</div>
                            </div>
                            <div class="proi_box">
                                <div class="proi_boxctram" onclick="seletion('ctram', 2)">512G</div>
                            </div>
                            <div class="proi_box">
                                <div class="proi_boxctram" onclick="seletion('ctram', 3)">1TB</div>
                            </div>
                        </li>
                        <li class="proi_item">
                            <p class="proi_name">Nơi sản xuất:</p>
                            <div class="proi_box">
                                <div class="proi_boxctor" onclick="seletion('ctor', 0)">Việt Nam</div>
                            </div>
                            <div class="proi_box">
                                <div class="proi_boxctor" onclick="seletion('ctor', 1)">Mỹ</div>
                            </div>
                        </li>
                        <li class="proi_item">
                            <p class="proi_name">Gói bảo hành:</p>
                            <div class="proi_box">
                                <div class="proi_boxcttime" onclick="seletion('cttime', 0)">BH 6 Tháng</div>
                            </div>
                            <div class="proi_box">
                                <div class="proi_boxcttime" onclick="seletion('cttime', 1)">BH 12 Tháng</div>
                            </div>
                        </li>
                        <script>
                                    seletion('color', 0, 'iphone/iphone_13_pro_max/den.jpg');
                                    seletion('ctram', 0);
                                    seletion('ctor', 0);
                                    seletion('cttime', 0);
                        </script>
                    </ul>
                </div>
            </div>
            <div class="proi_pay">
                <div class="proi_payctbox">
                    <p class="proi_payct">@Model.description</p>
                </div>
                <div class="proi_checkbox">
                    <p class="proi_pcx">Hết hàng.</p>
                </div>
                <div class="proi_btn">
                    <a onclick="end_stock()" class="btn btn_green proi_btnl">Mua hàng</a>
                    <div onclick="end_stock()" class="btn btn_green proi_btnr">
                        <i class="icon_cart_proi fa-solid fa-cart-shopping"></i>
                        Thêm vào giỏ hàng
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="info_detail">
        <div class="tdetail_title">
            Thông số kĩ thuật
        </div>
        <div class="detail_table">
            <table class="table">
                <tr class="tr0">
                    <td class='detail_title'>Thẻ SIM:</td>
                    <td class='detail_centent'>Nano + eSim</td>
                </tr>
                <tr class="tr1">
                    <td class='detail_title'>Ngày ra mắt:</td>
                    <td class='detail_centent'>24/9/2021</td>
                </tr>
                <tr class="tr0">
                    <td class='detail_title'>Màn hình:</td>
                    <td class='detail_centent'>
                        <p>6.7 inches, Super Retina XDR OLED, 120Hz, HDR10, Dolby Vision</p>
                    </td>
                </tr>
                <tr class="tr1">
                    <td class='detail_title'>Độ phân giải:</td>
                    <td class='detail_centent'>1284 x 2778 pixels, tỷ lệ 19.5:9</td>
                </tr>
                <tr class="tr0">
                    <td class='detail_title'>CPU:</td>
                    <td class='detail_centent'>
                        <p>Apple A15 Bionic (5 nm)</p>
                    </td>
                </tr>
                <tr class="tr1">
                    <td class='detail_title'>RAM:</td>
                    <td class='detail_centent'>6GB</td>
                </tr>
                <tr class="tr0">
                    <td class='detail_title'>Bộ nhớ/ Thẻ nhớ:</td>
                    <td class='detail_centent'>128/256/512GB/1TB</td>
                </tr>
                <tr class="tr1">
                    <td class='detail_title'>Camera sau:</td>
                    <td class='detail_centent'>
                        <p>12 MP, f/1.5, 26mm (wide), 1.9µm, dual pixel PDAF, sensor-shift OIS, 12 MP, 12 MP</p>
                    </td>
                </tr>
                <tr class="tr0">
                    <td class='detail_title'>Camera trước:</td>
                    <td class='detail_centent'>
                        <p>12 MP, f/2.2, 23mm (wide), 1/3.6"</p>
                    </td>
                </tr>
                <tr class="tr1">
                    <td class='detail_title'>Jack 3.5mm/ Loa:</td>
                    <td class='detail_centent'>Không/ Loa kép Stereo</td>
                </tr>
                <tr class="tr0">
                    <td class='detail_title'>Pin:</td>
                    <td class='detail_centent'>4373mAh, sạc nhanh 27W</td>
                </tr>
                <tr class="tr1">
                    <td class='detail_title'>GPU:</td>
                    <td class='detail_centent'>Apple GPU (5-core graphics)</td>
                </tr>
                <tr class="tr0">
                    <td class='detail_title'>Hệ điều hành:</td>
                    <td class='detail_centent'>iOS 15</td>
                </tr>
                <tr class="tr1">
                    <td class='detail_title'>Trọng lượng:</td>
                    <td class='detail_centent'>240 g</td>
                </tr>

                <tr class="tr0">
                    <td class='detail_title'>Chuẩn bộ nhớ:</td>
                    <td class='detail_centent'>NVMe</td>
                </tr>
            </table>
        </div>
    </div>
</div>

